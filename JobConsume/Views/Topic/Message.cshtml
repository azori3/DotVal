@using Domain.Entity
@using MVCProject.Controllers;
@model IEnumerable<Domain.Entity.message>
@{ Layout = null;
    List<int> nblike = (List<int>)ViewBag.nblike;
    List<likes> likes = (List<likes>)ViewBag.likes;

}

