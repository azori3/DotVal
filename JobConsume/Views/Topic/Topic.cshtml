@using MVCProject.Controllers;
@model IEnumerable<Domain.Entity.topic>
@{ Layout=null;
    List<int> msgs = (List<int>)ViewBag.nbmsg;
    List<favoris> fav = (List<favoris>)ViewBag.fav;
    List<favoris> favoris = (List<favoris>)ViewBag.favoris;

    }

