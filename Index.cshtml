
@model Webapp.Models.ActionModel
@{
    ViewBag.Title = "Index";
    var actions = (List<Domain.Entities.action>)ViewData["listAction"];
    
}

<script src="~/Content/wow.min.js"></script>
<script>
              new WOW().init();
</script>




<div class="wow bounceInUp container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Accueil ", "Accueil", "Article", new { @class = "navbar-brand" })
            </div>
            
            <ul class="nav navbar-nav">

                <li class="active">
                    @Html.ActionLink("Ajouter Action", "Index", "Article", new { @class = " btn-primary" })
                </li>
                
            </ul>
            <div style="display:flex;justify-content:flex-end">
                @using (Html.BeginForm("Index", "Action", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
            {
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.titreAction, new { @class = "form-control", @placeholder = "Titre" })
                    </div>

                    <input type="submit" value="Valider" class="btn btn-primary" />
                }
            </div>

        </div>
    </nav>
</div>



<div class="wow bounceInUp container">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date Debut</th>
                <th> Date Fin</th>
                <th> Modification</th>
                <th> Suppression</th>

            </tr>
        </thead>

        <tbody>

            @foreach (var f in actions)
            {
                <tr>
                    <td>@f.titreAction</td>
                    <td>@f.discriptionAction</td>
                    <td>@f.dateDebutAction.ToString()</td>
                <td>@f.dateFinAction.ToString()</td>
                <td>@Html.ActionLink("Modifier l'action", "ModifyArticle", "Article", new { id = f.idAction }, new { @class = "btn btn-primary", })</td>
                <td>@Html.ActionLink("Supprimer l'action", "DeleteAction", "Action", new { id = f.idAction }, new { @class = "btn btn-danger", @onclick = "return confirm('Confirmer la suppression ?');" })</td>
            </tr>

            }
        </tbody>

    </table>
</div>


